{
  "name": "syntag",
  "version": "1.0.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "workspaces": [
    "docs",
    "apps/*",
    "packages/*",
    "assets",
    "tools"
  ],
  "devDependencies": {
    "@syntag/tsconfig": "workspace:*",
    "prettier": "^3.3.0",
    "turbo": "latest",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@9.1.4"
}
