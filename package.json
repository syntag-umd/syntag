{
  "name": "syntag",
  "version": "1.0.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "scripts/*",
    "assets"
  ],
  "devDependencies": {
    "@syntag/tsconfig": "workspace:*",
    "prettier": "^3.3.3",
    "turbo": "latest",
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@9.2.0",
  "dependencies": {
    "@opentelemetry/api-logs": ">=0.46.0 <1.0.0",
    "@opentelemetry/instrumentation": ">=0.46.0 <1.0.0",
    "@opentelemetry/sdk-logs": ">=0.46.0 <1.0.0"
  }
}
