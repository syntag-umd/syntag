{
  "extends": "@syntag/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/types/*": ["./src/types/*"],
      "@/features/* ": ["./src/features/*"]
    }
  },
  "include": [
    "next-env.d.ts", 
    "**/*.ts", 
    "**/*.tsx", 
    ".next/types/**/*.ts",
    ".eslintrc.cjs",
    "**/*.cjs",
    "**/*.js",
  ],
  "exclude": ["node_modules"]
}
