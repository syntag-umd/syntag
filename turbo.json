{
  "$schema": "https://turbo.build/schema.json",
  "globalDotEnv": [".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "dotEnv": [".env.local", ".env"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"],
      "dotEnv": [".env.local", ".env"]
    },
    "test": {
      "dependsOn": ["build"],
      "dotEnv": [".env.test", ".env"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "topo": {
      "dependsOn": ["^topo"]
    },
    "check-types": {
      "dependsOn": ["topo"]
    }
  }
}