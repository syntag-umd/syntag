{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build",
        "^db:generate"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**", 
        "build/**"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "deploy": {
      "dependsOn": [
        "build",
        "test",
        "lint"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    },
    "test": {},
    "lint": {},
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "transit": {
      "dependsOn": ["^transit"]
    },
    "check-types": {
      "dependsOn": ["transit"]
    }
  },
  "globalDependencies": [
    ".env*",
    "tsconfig.json"
  ]
}
